<form action="/links//image-profile" method="POST" encType="multipart/form-data">
    <h3>Upload Profile Photo</h3>
    <input type="file" name="sampleFile" accept="image/*" />
    <input type="submit" class="btn btn-primary">
</form>


<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-body">

                    {{#if user.profile_image}}
                    <img class="card__image" src="{{user.profile_image}}" loading="lazy" alt="User Profile">
                    {{else}}
                    <img src="/not-found-image.png" class="card__image" alt="..." alt="User Profile">
                    {{/if}}
                    <h3>Welcome {{user.name}}</h3>
                    <h4>{{user.email}}</h4>
                </div>
            </div>
        </div>

    </div>
</div>
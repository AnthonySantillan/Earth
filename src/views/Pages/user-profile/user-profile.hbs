            <p class="texto">{{user.description}}</p>
        </div>
        <div class="perfil-usuario-footer" style="background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg');background-color: #f7f7f7;">

<link rel="stylesheet" href="/css/Profile.css">
{{#if user}}
<section class="seccion-perfil-usuario">
    <div class="perfil-usuario-header"  style="background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg');background-color: #f7f7f7;">
        <div class="perfil-usuario-portada"  style="background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg');background-color: #f7f7f7;">
            <div class="perfil-usuario-avatar">
                {{#if user.profile_image}}
                <img src="/{{user.profile_image}}" loading="lazy" alt="User Profile">
                {{else}}
                <img src="/not-found/not-found-image.png" alt="..." alt="User Profile">

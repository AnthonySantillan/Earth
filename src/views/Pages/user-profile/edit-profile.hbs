<div class="container p-4">
    <div class="col-md-12" style="margin-bottom: 5px;">
        <div class="card text-center"
            style="background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg');background-color: #f7f7f7;">
            <h3 class="card-title text-uppercase" style="color: rgb(44, 142, 253);">
                Perfil
            </h3>
        </div>


        <div class="card  mx-auto m-2"
            style="width: 50rem; background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg');background-color: #f7f7f7;">
            <div>
                <h5
                    style="background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg');background-color: #f7f7f7;">
                    Información Personal</h5>
            </div>
            <div class="m-2">
                <form action="/links/edit-profile" method="post">
                    <div class="row">
                        <div class="row panel-content col-6">
                            <div class="columns content-div">
                                <label for="exampleInputPassword1" class="form-label">Email</label>

                                <input class="form-control input-form-gray" disabled="" type="text" id="inputEmail"
                                    placeholder="Email" name="plEmail" value="{{user.email}}">
                                <div class="form-error-message plEmail"></div>
                            </div>
                        </div>
                        <div class="mb-3 col-6">
                            <label for="exampleInputPassword1" class="form-label">Nombre</label>
                            <input type="text" value="{{user.name}}" name="name" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-6">
                            <label for="exampleInputPassword1" class="form-label">Cedula/Pasaporte</label>
                            <input type="number" value="{{user.dni}}" name="dni" class="form-control" required>
                        </div>
                        <div class="mb-3 col-6">
                            <label for="exampleInputPassword1" class="form-label">Número de Celular</label>
                            <input type="number" value="{{user.phone}}" name="phone" class="form-control" required>
                        </div>

                    </div>

                    <div class="mb-3 col-12">
                        <label for="exampleInputPassword1" class="form-label">Descripcion</label>
                        <textarea name="description" rows="2" class="form-control" required
                            placeholder="Description">{{user.description}}</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
{{#if user}}
<div class="container p-4">
    <div class="col-md-12" style="margin-bottom: 5px;">
        <div class="card text-center"
            style="background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg');background-color: #f7f7f7;">
            <h3 class="card-title text-uppercase" style="color: rgb(44, 142, 253); ">
                Servicios que ofrecen los Arquitectos
            </h3>
        </div>
    </div>
    <scroll-container>
        <div class="row">
            {{#each users}}
            <div class="col-md-3 ">
                <div class="card "
                    style="margin-bottom: 5px; background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg');background-color: #f7f7f7;">
                    <div class="card-body">
                        {{#if profile_image}}
                        <img class="card__image" src="/{{profile_image}}" loading="lazy" alt="User Profile">
                        {{else}}
                        <img src="/not-found/not-found-image.png" class="card__image" alt="..." alt="User Profile">
                        {{/if}}

                        <p class="card-title text-uppercase text-center m-2" style="color: rgb(44, 142, 253);">
                            {{name}}
                        </p>
                        <p class="m-2">
                            Email: {{email}}
                        </p>
                        <p class="m-2">
                            Servicio:
                        </p>
                        <a class="btn btn-danger" href="#">
                            <i class="fa-solid fa-message"></i>
                             Message
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </scroll-container>

</div>
{{else}}
<h1>loguate papu</h1>
{{/if}}
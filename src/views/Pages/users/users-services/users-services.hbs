{{#if user}}
<div class="container p-4">
   
<div class="col-md-12" style="margin-bottom: 5px;">
        <div class="card text-center border border-primary">

        <h3 class="card-title text-uppercase" style="color: rgb(44, 142, 253);">
                Servicios que ofrecen los Arquitectos
            </h3>
        </div>
<div class="container p-4">    
    <div class="card  border border-primary">    
        <span class="input-group-text" id="basic-addon1">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-filter-right" viewBox="0 0 16 16">
                <path d="M14 10.5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0 0 1h3a.5.5 0 0 0 .5-.5zm0-3a.5.5 0 0 0-.5-.5h-7a.5.5 0 0 0 0 1h7a.5.5 0 0 0 .5-.5zm0-3a.5.5 0 0 0-.5-.5h-11a.5.5 0 0 0 0 1h11a.5.5 0 0 0 .5-.5z"></path>
            </svg>
            <input type="text" class="form-control" placeholder="FILTRO DE SERVICIO" aria-label="Input group example" aria-describedby="basic-addon1">
        </span>
    </div>
</div>
    </div>
        <div class="row">
            {{#each users}}
            <div class="col-md-3">
                <div class="card  border border-primary">
                    <div class="card-body">
                        {{#if profile_image}}
                        <img class="card__image" src="/{{profile_image}}" loading="lazy" alt="User Profile">
                        {{else}}
                        <img src="/not-found/not-found-image.png" class="card__image" alt="..." alt="User Profile">
                        {{/if}}
                        <p class="card-title text-uppercase text-center m-1" style="color: rgb(44, 142, 253);">
                            {{name}}
                        </p>
                        <p class="m-2">
                            Email: {{email}}
                        </p>
                        <p class="m-2">
                            Servicio:
                        </p>
                        <a class="btn btn-danger" href="/links/messagues">
                            <i class="fa-solid fa-message"></i>
                             Message
                        </a>
              
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
</div>
{{else}}
<h1>loguate papu</h1>
{{/if}}

